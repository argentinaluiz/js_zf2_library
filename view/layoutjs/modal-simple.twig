<div class='modal-header'>
    <button type='button' class='close' data-ng-click="close()">&times;</button>
    <h4 class='modal-title'> {{ '{{ modal.title }}' }} </h4>
</div>
<div class='modal-body'>
    {{ '{{ modal.body }}' }}
</div>
<div class='modal-footer'>
    <button type='button' class='btn btn-primary' data-ng-click="ok()"> Confirmar </button>
    <button type='button' class='btn btn-default' data-ng-click="close()"> Cancelar </button>
</div>